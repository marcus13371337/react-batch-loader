{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "es2016", "es2017"],
    "jsx": "react",
    "declaration": true, 
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist", 
    "strict": true,
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
